<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone"
      metal:use-macro="context/@@main_template/macros/master">

  <metal:title fill-slot="content-title">
    <h1 class="documentFirstHeading"
        i18n:translate="heading_change_password">Time to change your password!</h1>
  </metal:title>

  <metal:description fill-slot="content-description">
    <div class="documentDescription description">
        <span i18n:translate="description_forced_password_change">
        Before you continue, you need to change your password.
        </span>

    </div>
  </metal:description>

  <metal:b fill-slot="content-core">
      <metal:b use-macro="context/@@ploneform-macros/titlelessform" />
  </metal:b>

</html>
