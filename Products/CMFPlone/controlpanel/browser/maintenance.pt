<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/prefs_main_template/macros/master"
      xml:lang="en"
      i18n:domain="plone"
>

  <body>

    <metal:main fill-slot="prefs_configlet_main">

      <metal:form define-macro="form"
                  tal:condition="view/available"
      >

        <metal:block define-macro="header">

          <div class="alert alert-info"
               role="status"
               tal:define="
                 status view/status;
               "
               tal:condition="status"
          >
            <strong i18n:translate="">
                     Info
            </strong>
            <span tal:content="view/status"></span>
          </div>

        </metal:block>

        <header>
          <h1 class="documentFirstHeading"
              metal:define-slot="heading"
              tal:condition="view/label"
              tal:content="view/label"
              i18n:translate=""
          >
                Do something
          </h1>

          <div class="documentDescription"
               tal:condition="view/description"
               tal:content="view/description"
               i18n:translate=""
          >
                Description
          </div>
        </header>

        <div id="content-core">

          <form class="edit-form"
                action="."
                enctype="multipart/form-data"
                method="post"
                tal:attributes="
                  action request/URL;
                "
          >

            <fieldset class="mb-4">
              <legend i18n:translate="heading_zope_server">
                        Zope Server
              </legend>

              <div class="formControls"
                   id="actionsView"
              >
                <span class="actionButtons">
                  <button class="btn btn-danger"
                          id="form.buttons.shutdown"
                          name="form.buttons.shutdown"
                          type="submit"
                          value="Shut down"
                  >
                    <span i18n:translate="">Shut down</span>
                  </button>

                  <button class="btn btn-danger"
                          id="form.buttons.restart"
                          name="form.buttons.restart"
                          type="submit"
                          value="Restart"
                          tal:condition="view/isRestartable"
                  >
                    <span i18n:translate="">Restart</span>
                  </button>

                </span>
              </div>

            </fieldset>

            <input tal:replace="structure context/@@authenticator/authenticator" />

          </form>

          <form class="edit-form"
                id="zc.page.browser_form"
                action="."
                enctype="multipart/form-data"
                metal:define-macro="master"
                method="post"
                tal:attributes="
                  action request/URL;
                "
          >

            <div metal:define-slot="extra_info"
                 tal:replace="nothing"
            >
            </div>

            <fieldset class="mb-4">
              <legend tal:define="
                        form_name view/form_name|nothing;
                      "
                      tal:condition="form_name"
                      tal:content="form_name"
              >Form name</legend>

              <p>
                <strong i18n:translate="text_zope_database_name">Database name:</strong>
                <span tal:replace="view/dbName"></span>
              </p>

              <p i18n:translate="text_zope_database_size">
                <strong>Current database size:</strong>
                <span tal:replace="view/dbSize"
                      i18n:name="size"
                ></span>
              </p>

              <metal:define define-macro="widget_rendering">
                <tal:widgets repeat="widget view/widgets/values">
                  <metal:field-slot define-slot="field">
                    <metal:field define-macro="field">
                      <tal:widget tal:replace="structure widget/@@ploneform-render-widget" />
                    </metal:field>
                  </metal:field-slot>
                </tal:widgets>
              </metal:define>

              <metal:block define-slot="above_buttons" />

              <div class="visualClear"><!-- --></div>

              <div class="formControls"
                   id="actionsView"
              >
                <span class="actionButtons">
                  <button class="btn btn-danger"
                          id="form.buttons.pack"
                          name="form.buttons.pack"
                          type="submit"
                          value="Pack"
                  >
                    <span i18n:translate="">Pack</span>
                  </button></span>
              </div>

            </fieldset>

            <input tal:replace="structure context/@@authenticator/authenticator" />

          </form>

          <script tal:define="
                    extra_script view/extra_script | nothing;
                  "
                  tal:condition="extra_script"
                  tal:content="structure extra_script"
          >
          </script>
        </div>

      </metal:form>

      <metal:block tal:condition="not: view/available">
        <h1 class="documentFirstHeading"
            tal:condition="view/label"
            tal:content="view/label"
            i18n:translate=""
        >
             Do something
        </h1>

        <div class="documentDescription"
             tal:condition="view/description"
             i18n:translate="text_not_allowed_manage_server"
        >
             You are not allowed to manage the Zope server.
        </div>

        <div id="content-core">
          <a class="link-parent"
             href=""
             tal:attributes="
               href string:$portal_url/@@overview-controlpanel;
             "
             i18n:translate="label_up_to_plone_setup"
          >
                 Up to Site Setup
          </a>
        </div>
      </metal:block>


    </metal:main>
  </body>
</html>
