<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      xml:lang="en"
      i18n:domain="plone"
>
  <body>

    <metal:custom_title fill-slot="content-title">
      <h1 class="documentFirstHeading"
          i18n:translate="heading_reset_password"
      >Set your password</h1>
    </metal:custom_title>

    <metal:custom_desc fill-slot="content-description">
      <div class="documentDescription"
           i18n:translate="description_reset_password"
      >
            Please fill out the form below to set your password.
      </div>
    </metal:custom_desc>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core"
                          tal:define="
                            errors view/getErrors;
                          "
      >

        <form class="enableAutoFocus"
              method="post"
              name="pwreset_action"
              tal:attributes="
                action request/getURL;
              "
        >
          <fieldset>
            <legend i18n:translate="legend_new_password">New Password</legend>
            <input name="randomstring"
                   type="hidden"
                   value=""
                   tal:attributes="
                     value options/randomstring | request/randomstring | nothing;
                   "
            />

            <div class="mb-3 field"
                 tal:define="
                   error errors/userid | nothing;
                   use_email_as_login python:context.portal_registry['plone.use_email_as_login'];
                 "
                 tal:condition="here/portal_password_reset/checkUser | nothing"
                 tal:attributes="
                   class python:error and 'mb-3 field error' or 'mb-3 field';
                 "
            >

              <tal:username tal:condition="not:use_email_as_login">
                <label class="form-label"
                       for="userid"
                       i18n:translate="label_my_user_name_is"
                >My user name is</label>

                <input class="form-control"
                       id="userid"
                       name="userid"
                       required
                />

                <div class="invalid-feedback"
                     tal:content="error"
                >Validation error output</div>

                <small class="formHelp text-muted"
                       i18n:translate="help_userid"
                >
                            Enter your user name for verification.
                </small>
              </tal:username>

              <tal:email tal:condition="use_email_as_login">
                <label class="form-label required"
                       for="userid"
                       i18n:translate="label_my_email_address_is"
                >My email address is</label>

                <input class="form-control"
                       id="userid"
                       name="userid"
                       required
                />

                <div class="invalid-feedback"
                     tal:content="error"
                >Validation error output</div>

                <small class="formHelp text-muted"
                       i18n:translate="help_verify_email"
                >
                            Enter your email address for verification.
                </small>
              </tal:email>

            </div>

            <div class="mb-3 field"
                 tal:define="
                   error errors/password | nothing;
                 "
                 tal:attributes="
                   class python:error and 'mb-3 field error' or 'mb-3 field';
                 "
            >

              <label class="form-label required"
                     for="password"
                     i18n:translate="label_new_password"
              >New password</label>

              <input class="form-control"
                     id="password"
                     name="password"
                     required
                     size="10"
                     type="password"
              />

              <div class="invalid-feedback"
                   tal:content="error"
              >Validation error output</div>

              <small class="formHelp text-muted"
                     i18n:translate="help_new_password"
              >
                            Enter your new password.
              </small>

            </div>

            <div class="mb-3 field"
                 tal:define="
                   error errors/password | nothing;
                 "
                 tal:attributes="
                   class python:error and 'mb-3 field error' or 'mb-3 field';
                 "
            >

              <label class="form-label required"
                     for="password2"
                     i18n:translate="label_confirm_password"
              >Confirm password</label>

              <input class="form-control"
                     id="password2"
                     name="password2"
                     required
                     size="10"
                     type="password"
              />

              <div class="invalid-feedback"
                   tal:content="error"
              >Validation error output</div>

              <small class="formHelp text-muted"
                     i18n:translate="help_confirm_password"
              >
                            Re-enter the password. Make sure the passwords are identical.
              </small>

            </div>

            <div>
              <div class="label">&nbsp;</div>

              <div class="mb-3 field">
                <button class="btn btn-primary"
                        type="submit"
                        value="Set my password"
                        i18n:attributes="value"
                >
                  <span i18n:translate="">Set my password</span>
                </button>
              </div>
            </div>
            <input name="form.submitted"
                   type="hidden"
                   value="1"
            />
          </fieldset>
        </form>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
