<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      xml:lang="en"
      i18n:domain="plone"
>
  <body>

    <metal:custom_title fill-slot="content-title">
      <h1 class="documentFirstHeading"
          i18n:translate="heading_sent_password"
      >Password reset confirmation sent</h1>
    </metal:custom_title>

    <metal:custom_desc fill-slot="content-description">
      <div class="documentDescription"
           i18n:translate="description_sent_password"
      >
        Your password reset request has been mailed. It should arrive in your
        mailbox shortly. When you receive the message, visit the address it
        contains to reset your password.
      </div>
    </metal:custom_desc>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">


      </metal:content-core>
    </metal:content-core>

  </body>
</html>
