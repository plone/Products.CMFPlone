<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>
    
        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
    
        <div class="documentDescription"
             tal:content="here/Description">
            description
        </div>
    
        <p tal:condition="here/event_url|nothing">
        <span i18n:translate="event_for_more_info_go_to">For more information, visit</span>
    
        <a href="event_url"
           tal:attributes="href here/event_url"
           tal:content="here/event_url">event_url</a>
        </p>

        <dl>
            <dt i18n:translate="event_what">What</dt>
            <dd tal:content="python:modules['string'].join(here.Subject(), ' ')">Conference</dd>
    
            <dt i18n:translate="event_when">When</dt>
            <dd>
            <tal:differentday tal:condition="python:not here.start().Date() == here.end().Date()">
                <img tal:replace="structure here/event_icon.gif" />
                <span tal:replace="python:here.toLocalizedTime(here.start(), long_format=1)">Start Date Time</span>
                <span i18n:translate="event_and">to</span> <br />
                <img tal:replace="structure here/event_icon.gif" />
                <span tal:replace="python:here.toLocalizedTime(here.end(), long_format=1)">End Date Time</span>
            </tal:differentday>       

            <tal:sameday tal:condition="python:here.start().Date() == here.end().Date()">
                <img tal:replace="structure here/event_icon.gif" />
                <span tal:replace="python:here.toLocalizedTime(here.start())">Start Date Time</span>
                <span i18n:translate="event_from">from</span>
                <span tal:replace="python:here.start().TimeMinutes()">Start Time</span>
                <span i18n:translate="event_to">to</span>
                <span tal:replace="python:here.end().TimeMinutes()">End Date Time</span>
            </tal:sameday>
            </dd>
    
            <dt i18n:translate="event_where">Where</dt>
            <dd tal:content="here/location">Oslo</dd>
    
            <tal:name condition="here/contact_name">
                <dt i18n:translate="contact_name">Name</dt>
                <dd tal:content="here/contact_name">contact_name</dd>
            </tal:name>
    
            <tal:email tal:define="contact_email here/contact_email"
                       condition="here/contact_email">
                <dt i18n:translate="contact_email">Contact Email</dt>
                <dd>
                    <a tal:replace="structure python: here.spamProtect(contact_email)" />
                </dd>
            </tal:email>
    
            <tal:phone condition="here/contact_phone">
                <dt i18n:translate="contact_phone">Contact Phone</dt>
                <dd tal:content="here/contact_phone">555-GET-PLONE</dd>
            </tal:phone>
        </dl>
    
        <div metal:use-macro="here/document_byline/macros/byline">
            Get the byline - contains details about author and modification date.
        </div>
    </tal:main-macro>
</div>

</body>
</html>
