<html xmlns="http://www.w5.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>
<div metal:fill-slot="main"
     tal:define="is_manager python: checkPermission('Manage portal', here)">

    <h1 i18n:translate="heading_member_search">Search for users</h1>

    <p i18n:translate="description_member_search">
        This search form enables you to find users by specifying one or more
        search criteria.
    </p>

    <form action="member_search_results"
          method="post"
          name="search"
          tal:define="DateTime python:modules['DateTime'].DateTime">

        <fieldset>
            <legend i18n:translate="legend_member_search_criteria">User Search Criteria</legend>

            <div class="field">
                <label for="name"
                       i18n:translate="label_name">Name</label>
                
                <div class="formHelp" i18n:translate="help_search_name">
                    Find users whose login-names contain
                </div>

                <input type="text"
                       id="login"
                       name="login"
                       size="25"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>

            <div class="field">
                <label for="email"
                       i18n:translate="label_email">E-mail</label>

                <div class="formHelp" i18n:translate="help_search_email">
                    Find users whose email-addresses contain
                </div>

                <input type="text"
                       id="email"
                       name="email"
                       size="25"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>

            <div class="field">
                <label for="last_login_time"
                       i18n:translate="label_last_logged_in">
                    Last logged in
                </label>

                <div class="formHelp" i18n:translate="help_search_last_logged_in">
                    Find users who have logged in since yesterday, last week, etc.
                </div>

                <tal:datetime define="today python:DateTime().earliestTime()">
                    <select name="last_login_time:date"
                            id="last_login_time"
                            tabindex=""
                            tal:attributes="tabindex tabindex/next;"
                            tal:define="yesterday python:(today-1).Date();
                                        lastweek python:(today-7).Date();
                                        lastmonth python:(today-31).Date();
                                        ever string:2000/02/01 00:00:00 GMT;">
                        <option value="#" tal:attributes="value yesterday" i18n:translate="time_yesterday">Yesterday</option>
                        <option value="#" tal:attributes="value lastweek" i18n:translate="time_last_week">Last week</option>
                        <option value="#" tal:attributes="value lastmonth" i18n:translate="time_last_month">Last month</option>
                        <option value="#" tal:attributes="value ever" selected="selected" i18n:translate="time_ever">Ever</option>
                    </select>
                </tal:datetime>
            </div>

           <div class="field">
                <label for="fullname"
                       i18n:translate="label_fullname">Full Name</label>

                <div class="formHelp" i18n:translate="help_search_fullname">
                Return users with full names containing this value.
                </div>

                <input type="text"
                       id="fullname"
                       name="fullname"
                       size="25"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>

            <div class="field">
              <input type="checkbox" class="noborder"
                     name="before_specified_time" id="cb_before_specified_time"
                     tabindex=""
                     tal:attributes="tabindex tabindex/next;" />

              <label for="cb_before_specified_time"
                     i18n:translate="label_before_specified_time">Not logged in since specified time</label>

              <div class="formHelp" i18n:translate="help_search_before_specified_time">
                Find users who have NOT logged in since the time specified above.
              </div>
            </div>

            <tal:condition condition="python:checkPermission('View Groups', portal)">
            <div class="field"
                 tal:define="gtool context/portal_groups;
                             grouplist gtool/listGroups;"
                 tal:condition="grouplist">
                 <label for="groupname"
                        i18n:translate="legend_group"> Group </label>

                 <div class="formHelp" i18n:translate="help_search_group"> 
                     Find users in the selected group.
                 </div>

                 <select id="groupname" name="groupname">
                     <option value="" i18n:translate="search_any_group"> Any Group </option>
                     <option tal:repeat="group grouplist"
                             tal:attributes="value group/getGroupName"
                             tal:content="python: group.title or group.getGroupName()">group name</option>
                 </select>
            </div>
            </tal:condition>

            <div class="field" 
                 tal:condition="is_manager"
                 tal:define="memberRoles request/roles|nothing;
                             portalRoles python:mtool.getPortalRoles()">

                <label for="roles"
                       i18n:translate="label_roles">Role(s)</label>

                <div class="formHelp" i18n:translate="help_search_roles">
                    Find users with all of the selected roles.
                </div>

                <metal:role tal:repeat="role portalRoles">
                <metal:tabindex tal:define="tabindex tabindex/next">
                    <input id="roles"
                           name="roles:list"
                           type="checkbox"
                           class="noborder"
                           tabindex=""
                           tal:attributes="tabindex tabindex;
                                           value role;
                                           id string:roles_${repeat/role/number}"
                           />
                    <label for=""
                           i18n:translate=""
                           tal:attributes="for string:roles_${repeat/role/number}"
                           tal:content="role"
                           />
                    <br />
                </metal:tabindex>
                </metal:role>
            </div>

            <div class="formControls">
                <input class="context"
                       tabindex=""
                       type="submit"
                       name="submit"
                       value="Search"
                       i18n:attributes="value label_search;"
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
        </fieldset>
    </form>

</div>

</body>
</html>
