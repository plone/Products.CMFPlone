<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />

<body tal:define="DateTime python:modules['DateTime'].DateTime;">
<div metal:fill-slot="main"
     tal:define="canReview python: checkPermission('Review portal content', here);
                 revList here/my_worklist|python:[];
                 Batch python:modules['Products.CMFPlone'].Batch;
                 b_size python:30;
                 b_start python:0;
                 standalone python:1;
                 contentTypes python:[];
                 b_start request/b_start | b_start;
                 batch python:Batch(revList, b_size, int(b_start), orphan=1);">

    <h1 i18n:translate="heading_full_review_list">Full review list:</h1>

    <form name="worklistForm"
            method="post"
            action="folder_object"
            tal:attributes="action here_url"
            tal:condition="python: canReview and revList">

        <metal:listing use-macro="here/folder_contents/macros/folder_listing"/>

        <metal:buttons use-macro="here/folder_contents/macros/folder_buttons"/>
    </form>
</div>
</body>
</html>
